To make deb package for Ubuntu, run this:

$ apt-get install libcups2-dev libcupsimage2-dev cmake g++ subversion dpkg-dev
$ cmake -DCMAKE_ISNTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release . -DCUPS_PPD_DIR=share/ppd -DCUPS_FILTER_DIR=lib/cups/filter -DCPACK_PACKAGE_NAME="prp085iiit" -DCPACK_PACKAGE_VERSION="1.0.0" -DCPACK_PACKAGE_CONTACT="Oleg Kravchenko <oleg@kaa.org.ua" -DCPACK_PACKAGE_DESCRIPTION_SUMMARY="Cups driver for Tysso PRP-085IIIT" -DCPACK_GENERATOR=DEB -DCPACK_DEBIAN_PACKAGE_DEPENDS="libcups2, libcupsimage2, libc6" -DCPACK_STRIP_FILES="rasterto_prp085iiit" -DCPACK_SYSTEM_NAME=$(uname -m)
$ make package
